.wrap .address {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wrap .u-cell-box {
  border-radius: 30rpx;
  margin: 30rpx 0;
}
.wrap .item-menu-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.wrap .item-menu-name {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 100%;
}
.wrap .u-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  right: 0;
  display: flex;
  z-index: 99;
}
.wrap .u-bottom__nums {
  border-left: 1px solid #606266;
  font-size: 24rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  font-weight: bold;
}
.wrap .u-bottom__wrap, .wrap .u-bottom__place {
  display: flex;
  color: #fff;
}
.wrap .u-bottom__wrap {
  width: 70%;
  padding: 30rpx 0 30rpx 30rpx;
  align-items: center;
  color: #303133;
  border-top: 1px solid #f3f4f6;
  background-color: white;
}
.wrap .u-bottom__place {
  background-color: #EE2F37;
  width: 30%;
  text-align: center;
  flex-direction: column;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}
.wrap .list-box {
  padding: 20rpx 30rpx;
  margin: 0 30rpx 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 14rpx;
  box-shadow: 2px 0px 8px 0px rgba(243, 244, 246, 0.95);
}
.pay-popup {
  padding: 40rpx 40rpx 50rpx 40rpx;
  background-color: #ffffff;
  position: relative;
}
.pay-popup__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  border-radius: 24rpx 24rpx 0 0;
}
.pay-popup__loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
}
.pay-popup__spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #07c160;
  border-radius: 50%;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
}
.pay-popup__loading-text {
  font-size: 28rpx;
  color: #303133;
  font-weight: 500;
}
.pay-popup__title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.pay-popup__amount {
  text-align: center;
  margin-bottom: 10rpx;
}
.pay-popup__amount .symbol {
  font-size: 32rpx;
  color: #303133;
}
.pay-popup__amount .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #303133;
  margin-left: 6rpx;
}
.pay-popup__desc {
  text-align: center;
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 30rpx;
}
.pay-popup__password {
  margin: 0 20rpx 10rpx 20rpx;
}
.pay-popup__error {
  text-align: center;
  font-size: 22rpx;
  color: #fa3534;
  margin-bottom: 20rpx;
}
.pay-popup__actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.coupon-selector {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.coupon-selector__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}
.coupon-selector__title {
  font-size: 32rpx;
  font-weight: bold;
}
.coupon-selector__close {
  padding: 10rpx;
}
.coupon-selector__list {
  flex: 1;
}
.coupon-selector__item {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.coupon-selector__item--none {
  justify-content: center;
  padding: 30rpx;
}
.coupon-selector__item--selected {
  border-color: #EE2F37;
  background: #fdf3f3;
}
.coupon-selector__item--disabled {
  opacity: 0.5;
  background: #f5f5f5;
}
.coupon-selector__item-left {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffeeef;
  border-radius: 12rpx;
  padding: 20rpx 0;
  margin-right: 20rpx;
}
.coupon-selector__item-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #EE2F37;
}
.coupon-selector__item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.coupon-selector__item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.coupon-selector__item-desc {
  font-size: 24rpx;
  color: #909399;
}
.coupon-selector__item-tip {
  font-size: 22rpx;
  color: #EE2F37;
}
.coupon-selector__item-check {
  position: absolute;
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.coupon-selector__empty {
  text-align: center;
  padding: 100rpx 0;
  color: #909399;
  font-size: 28rpx;
}
.pay-popup__discount {
  display: block;
  font-size: 24rpx;
  color: #67c23a;
  margin-top: 10rpx;
}
