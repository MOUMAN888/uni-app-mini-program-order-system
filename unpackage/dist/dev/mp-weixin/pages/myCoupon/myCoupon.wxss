.coupon-page {
  min-height: 100vh;
  padding: 30rpx;
  background: #f7f7f7;
}
.coupon-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #ee2f37, #ff7b55);
  border-radius: 20rpx;
  color: #fff;
}
.coupon-header__title {
  font-size: 36rpx;
  font-weight: bold;
}
.coupon-header__subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  opacity: 0.9;
}
.coupon-card {
  display: flex;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}
.coupon-card--used {
  background: #f3f4f6;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}
.coupon-card--used .coupon-card__left {
  background: #e6e7eb;
}
.coupon-card--used .coupon-card__currency,
.coupon-card--used .coupon-card__amount {
  color: #9ca3af;
}
.coupon-card--used .coupon-card__name {
  color: #6b7280;
}
.coupon-card--used .coupon-card__info,
.coupon-card--used .coupon-card__status {
  color: #9ca3af;
}
.coupon-card__ribbon {
  position: absolute;
  top: 20rpx;
  right: -60rpx;
  width: 220rpx;
  text-align: center;
  background: #d1d5db;
  color: #4b5563;
  font-weight: bold;
  padding: 12rpx 0;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  letter-spacing: 4rpx;
}
.coupon-card__left {
  width: 28%;
  background: #ffeeef;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: flex-end;
  gap: 6rpx;
}
.coupon-card__currency {
  font-size: 28rpx;
  color: #ee2f37;
}
.coupon-card__amount {
  font-size: 60rpx;
  color: #ee2f37;
  font-weight: bold;
}
.coupon-card__right {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.coupon-card__name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
}
.coupon-card__info {
  font-size: 24rpx;
  color: #909399;
}
.coupon-card__status {
  font-size: 24rpx;
  color: #67c23a;
  font-weight: bold;
}
.coupon-card__status--used {
  color: #909399;
}
