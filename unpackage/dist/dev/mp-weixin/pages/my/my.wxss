.header__bg {
  height: 368rpx;
  background-color: #EE2F37;
}
.header__con {
  display: flex;
  justify-content: space-between;
  background-color: white;
  width: 90%;
  margin: -150rpx auto 0 auto;
  border-radius: 14rpx;
  padding: 20rpx 30rpx 30rpx 30rpx;
  box-shadow: 2px 0px 8px 0px rgba(243, 244, 246, 0.95);
}
.header__avatar {
  margin-top: -50rpx;
}
.header__name {
  font-weight: bold;
  font-size: 34rpx;
}
.header__line {
  margin: 15rpx 0 10rpx 0;
}
.header__linevipdesc {
  font-size: 24rpx;
  color: #909399;
  margin-left: 20rpx;
}
.header__level {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.header__levelname {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.header__stats {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 15rpx 20rpx;
  background: #fdf3f3;
  border-radius: 12rpx;
}
.header__stats-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.header__stats-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
}
.header__stats-label {
  font-size: 22rpx;
  color: #909399;
  margin-top: 6rpx;
}
.header__stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.05);
  margin: 0 30rpx;
}
.grid-box {
  margin: 0 30rpx;
  box-shadow: 2px 0px 8px 0px rgba(243, 244, 246, 0.95);
  border-radius: 14rpx;
}
.grid-box__text {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}
