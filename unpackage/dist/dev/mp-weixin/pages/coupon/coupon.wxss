.coupon-page {
  min-height: 100vh;
  padding: 30rpx;
  background: #f7f7f7;
}
.coupon-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #ee2f37, #ff7b55);
  border-radius: 20rpx;
  color: #fff;
}
.coupon-header__title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.coupon-header__title-bar-left {
  width: 150px;
  gap: 10rpx;
}
.coupon-header__title {
  font-size: 36rpx;
  font-weight: bold;
}
.coupon-header__subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  opacity: 0.9;
}
.coupon-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}
.coupon-card__left {
  width: 28%;
  background: #ffeeef;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: flex-end;
  gap: 6rpx;
}
.coupon-card__currency {
  font-size: 28rpx;
  color: #ee2f37;
}
.coupon-card__amount {
  font-size: 60rpx;
  color: #ee2f37;
  font-weight: bold;
}
.coupon-card__right {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.coupon-card__name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
}
.coupon-card__info {
  font-size: 24rpx;
  color: #909399;
}
.coupon-card__actions {
  flex-wrap: wrap;
  text-align: right;
}
.coupon-card__header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}
.coupon-card__admin-actions {
  display: flex;
  gap: 16rpx;
}
.coupon-card__meta {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  padding: 10rpx 0;
}
.coupon-card__meta-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 16rpx 18rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border: 1rpx solid #f1f1f1;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.coupon-card__meta-label {
  font-size: 24rpx;
  color: #909399;
}
.coupon-card__meta-value {
  font-size: 28rpx;
  color: #303133;
  font-weight: 600;
}
.coupon-form {
  padding: 30rpx;
  width: 600rpx;
}
.coupon-form__title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}
.coupon-form__actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}
